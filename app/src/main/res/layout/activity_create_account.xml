<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.createaccount.CreateAccount">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:orientation="vertical">

        <!-- Name Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_input" />

        <!-- Age Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/age_input"
            android:inputType="number" />

        <!-- Biography Input -->


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/biography_input"
            android:inputType="textMultiLine"
            android:minLines="4" />


        <!-- Spinner for Interest 1 -->
        <Spinner
            android:id="@+id/interest1_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:spinnerMode="dropdown"
            tools:prompt="@string/select_interest1" />

        <!-- Spinner for Interest 2 -->
        <Spinner
            android:id="@+id/interest2_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:spinnerMode="dropdown"
            tools:prompt="@string/select_interest1" />

        <!-- Spinner for Interest 3 -->
        <Spinner
            android:id="@+id/interest3_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:spinnerMode="dropdown"
            tools:prompt="@string/select_interest1" />

        <!-- Gender Selection -->
        <RadioGroup
            android:id="@+id/gender_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/gender_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender_male" />

            <RadioButton
                android:id="@+id/gender_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender_female" />
        </RadioGroup>

        <!-- Avatar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/avatar_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/avatar_description"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder" />

            <Button
                android:id="@+id/add_avatar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/add_avatar" />
        </LinearLayout>

        <!-- Gallery Photos Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <!-- Image 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/create_gallery_image_1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/gallery_image1_description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder" />

                <Button
                    android:id="@+id/add_gallery_photo_1_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/add_gallery_photo1" />
            </LinearLayout>

            <!-- Image 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/create_gallery_image_2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/gallery_image2_description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder" />

                <Button
                    android:id="@+id/add_gallery_photo2_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/add_gallery_photo2" />
            </LinearLayout>

            <!-- Image 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/create_gallery_image_3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/gallery_image3_description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder" />

                <Button
                    android:id="@+id/add_gallery_photo3_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/add_gallery_photo3" />
            </LinearLayout>
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/submit" />
    </LinearLayout>
</ScrollView>
