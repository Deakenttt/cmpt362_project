<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Card 1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

<!--                <ImageView-->
<!--                    android:id="@+id/user_image_1"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="200dp"-->
<!--                    android:scaleType="centerCrop"-->
<!--                    android:src="@drawable/sample_user_image" />-->

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Looking for User..."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/user_interest_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:paddingTop="12dp">

                        <ImageButton
                            android:id="@+id/like_button_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/placeholder_image"
                            android:src="@drawable/round_sentiment_satisfied_24"
                            android:contentDescription="@string/match_like" />

                        <ImageButton
                            android:id="@+id/dislike_button_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/placeholder_image"
                            android:src="@drawable/round_sentiment_dissatisfied_24"
                            android:contentDescription="@string/match_dislike" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

<!--                <ImageView-->
<!--                    android:id="@+id/user_image_2"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="200dp"-->
<!--                    android:scaleType="centerCrop"-->
<!--                    android:src="@drawable/sample_user_image" />-->

                <TextView
                    android:id="@+id/describle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="describle photo 1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/user_interest_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interests: Music, Art"
                    android:paddingTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp">

                    <ImageButton
                        android:id="@+id/like_button_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/placeholder_image"
                        android:src="@drawable/round_sentiment_satisfied_24"
                        android:contentDescription="@string/match_like" />

                    <ImageButton
                        android:id="@+id/dislike_button_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/placeholder_image"
                        android:src="@drawable/round_sentiment_dissatisfied_24"
                        android:contentDescription="@string/match_dislike" />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 3 -->
        <!-- Repeat similar structure for Cards 3, 4, 5, and 6 with unique IDs (user_image_3, user_name_3, etc.) -->

        <!-- Card 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!--                <ImageView-->
                <!--                    android:id="@+id/user_image_2"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="200dp"-->
                <!--                    android:scaleType="centerCrop"-->
                <!--                    android:src="@drawable/sample_user_image" />-->

                <TextView
                    android:id="@+id/describle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="describle photo 2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/user_interest_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interests: Music, Art"
                    android:paddingTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp">

                    <ImageButton
                        android:id="@+id/like_button_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/placeholder_image"
                        android:src="@drawable/round_sentiment_satisfied_24"
                        android:contentDescription="@string/match_like" />

                    <ImageButton
                        android:id="@+id/dislike_button_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/placeholder_image"
                        android:src="@drawable/round_sentiment_dissatisfied_24"
                        android:contentDescription="@string/match_dislike" />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/post_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"/>
        </LinearLayout>



    </LinearLayout>

</ScrollView>
